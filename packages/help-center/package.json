	"license": "GPL-2.0-or-later",
	"author": "Automattic Inc.",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"calypso:src": "src/index.ts",
	"sideEffects": [
		"*.css",
		"*.scss",
		"src/directly/*"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Automattic/wp-calypso.git",
		"directory": "packages/tour-kit"
	},
	"publishConfig": {
		"access": "public"
	},
	"bugs": "https://github.com/Automattic/wp-calypso/issues",
	"types": "dist/types",
	"scripts": {
		"clean": "tsc --build ./tsconfig.json ./tsconfig-cjs.json --clean && rm -rf dist",
		"build": "tsc --build ./tsconfig.json ./tsconfig-cjs.json",
		"prepack": "yarn run clean && yarn run build",
		"watch": "tsc --build ./tsconfig.json --watch",
		"storybook": "start-storybook"
	},
	"dependencies": {
		"@automattic/components": "workspace:^",
		"@automattic/i18n-utils": "workspace:^",
		"@automattic/site-picker": "workspace:^",
		"@automattic/viewport": "workspace:^",
		"@automattic/viewport-react": "workspace:^",
		"@popperjs/core": "^2.10.2",
		"@wordpress/base-styles": "^4.5.0",
		"@wordpress/components": "^19.11.0",
		"@wordpress/i18n": "^4.9.0",
		"@wordpress/icons": "^9.0.0",
		"@wordpress/primitives": "^3.7.0",
		"classnames": "^2.3.1",
