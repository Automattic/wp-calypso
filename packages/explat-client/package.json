	"license": "GPL-2.0-or-later",
	"main": "dist/cjs/index.js",
	"browser": "dist/esm/index.js",
	"module": "dist/esm/index.js",
	"calypso:src": "src/index.ts",
	"types": "dist/types/index.d.ts",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Automattic/wp-calypso.git",
