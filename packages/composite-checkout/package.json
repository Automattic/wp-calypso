		"@emotion/react": "^11.11.1",
		"@emotion/styled": "^11.11.0",
		"@wordpress/i18n": "^4.44.0",
		"@wordpress/react-i18n": "^3.42.0",
		"debug": "^4.3.3",
		"prop-types": "^15.7.2"
