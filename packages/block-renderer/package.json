{
	"name": "@automattic/block-renderer",
	"version": "1.0.0",
	"description": "Render blocks on the client side.",
	"homepage": "https://github.com/Automattic/wp-calypso",
	"license": "GPL-2.0-or-later",
	"author": "Automattic Inc.",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"calypso:src": "src/index.tsx",
	"sideEffects": [
		"*.css",
		"*.scss"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Automattic/wp-calypso.git",
		"directory": "packages/block-renderer"
	},
	"publishConfig": {
		"access": "public"
	},
	"bugs": "https://github.com/Automattic/wp-calypso/issues",
	"types": "dist/types",
	"scripts": {
		"clean": "tsc --build ./tsconfig.json ./tsconfig-cjs.json --clean && rm -rf dist",
		"build": "tsc --build ./tsconfig.json ./tsconfig-cjs.json && copy-assets",
		"prepack": "yarn run clean && yarn run build",
		"watch": "tsc --build ./tsconfig.json --watch"
	},
	"dependencies": {
		"@automattic/global-styles": "workspace:^",
		"@tanstack/react-query": "^5.15.5",
		"@wordpress/block-editor": "^12.20.0",
		"@wordpress/compose": "^6.29.0",
		"classnames": "^2.3.2",
		"tslib": "^2.3.0",
		"utility-types": "^3.10.0",
		"wpcom-proxy-request": "workspace:^"
	},
	"devDependencies": {
		"@automattic/calypso-typescript-config": "workspace:^",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"typescript": "^5.3.3"
	},
	"peerDependencies": {
		"@wordpress/data": "^9.22.0",
		"@wordpress/element": "^5.29.0",
		"@wordpress/i18n": "^4.52.0",
		"debug": "^4.3.3",
		"redux": "^4.2.1"
	},
	"private": true
}
