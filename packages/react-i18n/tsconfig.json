{
	"compilerOptions": {
		"target": "ES5",
		"lib": [ "DOM", "ES2015" ],

		"baseUrl": ".",
		"module": "esnext",
		"allowJs": false,
		"jsx": "react",
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "dist/types",
		"outDir": "dist/esm",
		"rootDir": "src",

		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,

		"moduleResolution": "node",
		"esModuleInterop": true,

		"forceConsistentCasingInFileNames": true,

		"typeRoots": [ "../../node_modules/@types" ],
		"types": [],

		"importHelpers": true,
		"composite": true
	},
	"include": [ "src" ],
	"exclude": [ "**/docs/*", "**/test/*" ]
}
