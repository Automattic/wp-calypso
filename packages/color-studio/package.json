{
  "name": "palette",
  "version": "0.2.1",
  "private": true,
  "main": "index.js",
  "dependencies": {
    "chroma-js": "^1.3.6",
    "lodash": "^4.17.5"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "xo": "^0.20.3"
  },
  "scripts": {
    "lint": "xo",
    "precommit": "yarn lint"
  },
  "xo": {
    "esnext": true,
    "space": true,
    "semicolon": false,
    "rules": {
      "array-bracket-newline": [
        "off"
      ],
      "capitalized-comments": [
        "off"
      ],
      "curly": [
        "error",
        "multi-line"
      ],
      "key-spacing": [
        "off"
      ],
      "no-await-in-loop": [
        "off"
      ],
      "no-mixed-operators": [
        "off"
      ],
      "no-multi-spaces": [
        "off"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ]
    }
  }
}
