{
  "name": "color-studio",
  "version": "0.2.1",
  "private": true,
  "dependencies": {
    "autoprefixer": "^8.2.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "bootstrap": "^4.0.0",
    "chroma-js": "^1.3.6",
    "copy-text-to-clipboard": "^1.0.4",
    "css-loader": "^0.28.11",
    "lodash": "^4.17.5",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.8.3",
    "postcss-loader": "^2.1.3",
    "sass-loader": "^6.0.7",
    "webpack": "^4.5.0"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "webpack-cli": "^2.0.14",
    "xo": "^0.20.3"
  },
  "scripts": {
    "development": "open index.html && webpack --watch --mode=development",
    "lint": "xo",
    "precommit": "yarn lint && webpack --display=errors-only && git add --update"
  },
  "xo": {
    "ignores": [
      "**/build/*.js"
    ],
    "esnext": true,
    "space": true,
    "semicolon": false,
    "rules": {
      "array-bracket-newline": [
        "off"
      ],
      "capitalized-comments": [
        "off"
      ],
      "curly": [
        "error",
        "multi-line"
      ],
      "key-spacing": [
        "off"
      ],
      "no-await-in-loop": [
        "off"
      ],
      "no-mixed-operators": [
        "off"
      ],
      "no-multi-spaces": [
        "off"
      ],
      "no-negated-condition": [
        "off"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ]
    }
  }
}
