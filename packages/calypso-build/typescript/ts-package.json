{
	"$schema": "https://json.schemastore.org/tsconfig",

	"compilerOptions": {
		// Allow composed projects
		"composite": true,
		"disableReferencedProjectLoad": true,

		// Generate declarations and sourcemaps
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,

		// Do not emit helpers, rely on importing tslib
		"importHelpers": true,
		"noEmitHelpers": true,
		"skipLibCheck": true,

		// Target modern JS
		"lib": [ "ES2020", "DOM", "DOM.Iterable"],
		"module": "ES2020",
		"target": "ES2020",
		"esModuleInterop": true,
		"jsx": "react",
		"resolveJsonModule": true,

		// Code checks
		"strict": true,
		"isolatedModules": true,

		"moduleResolution": "node",
		"types": [ ],
		"forceConsistentCasingInFileNames": true
	}
}
