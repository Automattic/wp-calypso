{
	"compilerOptions": {
		// Allow composed projects
		"composite": true,
		"disableReferencedProjectLoad": true,

		// Generate declarations and sourcemaps
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,

		// Do not emit helpers, rely on importin tslib
		"importHelpers": true,
		"noEmitHelpers": true,
		"skipLibCheck": true,

		// Target moden JS
		"lib": [ "ES2020" ],
		"module": "ES2020",
		"target": "ES2020",
		"esModuleInterop": true,

		// Strict checks
		"strict": true,
		"isolatedModules": true,

		"moduleResolution": "node",
		"types": [ "node" ],
		"forceConsistentCasingInFileNames": true
	}
}
