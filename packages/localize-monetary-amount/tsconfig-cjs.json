{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"outDir": "./dist/cjs",

		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,

		"moduleResolution": "node",
		"esModuleInterop": true
	},
	"include": [ "src/**/*" ],
	"exclude": [ "**/test/**/*", "**/docs/**/*" ]
}
