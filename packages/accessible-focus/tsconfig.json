{
	"compilerOptions": {
		"target": "ES5",
		"baseUrl": ".",
		"module": "esnext",
		"allowJs": false,
		"declaration": true,
		"declarationDir": "dist/types",
		"outDir": "dist/esm",
		"rootDir": "src",

		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,

		"moduleResolution": "node",
		"esModuleInterop": true,

		"forceConsistentCasingInFileNames": true,

		"typeRoots": [ "../../node_modules/@types" ],
		"types": [ "node" ],

		"noEmitHelpers": true,
		"importHelpers": true,

		"composite": true
	},
	"include": [ "src" ],
	"exclude": [ "**/test/*" ]
}
