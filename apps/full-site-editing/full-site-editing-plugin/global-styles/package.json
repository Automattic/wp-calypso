{
	"name": "@automattic/global-styles",
	"version": "1.0.0",
	"description": "Global Styles",
	"author": "Automattic",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"WordPress"
	],
	"homepage": "https://github.com/automattic/global-styles",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/automattic/global-styles.git"
	},
	"bugs": {
		"url": "https://github.com/WordPress/automattic/global-styles/issues"
	},
	"dependencies": {
		"classnames": "2.2.6"
	},
	"devDependencies": {
		"@wordpress/scripts": "5.0.0",
		"node-sass": "4.12.0"
	},
	"scripts": {
		"build": "wp-scripts build src/index.js --output-path=dist/ && node-sass ./src/editor.scss -o dist",
		"check-licenses": "wp-scripts check-licenses",
		"env": "wp-scripts env",
		"lint": "npm run lint:css && npm run lint:js && npm run lint:pkg-json",
		"lint:css": "wp-scripts lint-style 'src/**/*.scss'",
		"lint:js": "wp-scripts lint-js ./src",
		"lint:pkg-json": "wp-scripts lint-pkg-json",
		"start": "wp-scripts start src/index.js --output-path=dist/ && node-sass ./src/editor.scss -o dist && node-sass --watch ./src/editor.scss -o dist"
	},
	"wp-env": {
		"plugin-dir": "global-styles",
		"plugin-name": "Global Styles"
	}
}
