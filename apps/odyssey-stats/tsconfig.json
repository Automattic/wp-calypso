{
	"extends": "@automattic/calypso-typescript-config/mixed-package.json",
	"compilerOptions": {
		"rootDir": "../../",
		"paths": {
			"calypso/*": [ "../../client/*" ]
		}
	},
	"include": [
		"**/*",
		"./package.json",
		"./app.tsx",
		"./widget-loader.ts",
		"./routes.ts",
		"../../client/**/*"
	],
	"exclude": [ "./**/node_modules/**/*", "./**/test/**/*" ],
	"references": [ { "path": "../../packages" } ]
}
