{
	"name": "@automattic/help-center-app",
	"version": "1.0.0",
	"description": "Help Center app to be used in Jetpack.",
	"homepage": "https://github.com/Automattic/wp-calypso",
	"license": "GPL-2.0-or-later",
	"author": "Automattic Inc.",
	"sideEffects": [
		"*.css",
		"*.scss",
		"apps/config.js"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Automattic/wp-calypso.git",
		"directory": "apps/help-center"
	},
	"publishConfig": {
		"access": "public"
	},
	"bugs": "https://github.com/Automattic/wp-calypso/issues",
	"types": "dist/types",
	"scripts": {
		"clean": "rm -rf dist",
		"build": "NODE_ENV=production yarn dev",
		"build:app": "calypso-build && yarn run translate",
		"dev": "yarn run calypso-apps-builder --localPath dist/apps --remotePath /home/wpcom/public_html/widgets.wp.com/help-center",
		"prepack": "yarn run clean && yarn run build",
		"watch": "tsc --build ./tsconfig.json --watch",
		"translate": "rm -rf dist/apps/strings && wp-babel-makepot './dist/apps/*.{js,jsx,ts,tsx}' --ignore '**/node_modules/**,**/test/**,**/*.d.ts' --base './dist' --dir './dist/apps/strings' --output './dist/apps/help-center.pot' && build-app-languages --stringsFilePath='./dist/apps/help-center.pot' --outputPath='./dist/apps/languages'"
	},
	"dependencies": {
		"@automattic/calypso-analytics": "workspace:^",
		"@automattic/help-center": "workspace:^",
		"@automattic/i18n-utils": "workspace:^",
		"@tanstack/react-query": "^5.15.5",
		"@wordpress/components": "^28.0.0",
		"@wordpress/compose": "^7.0.0",
		"@wordpress/plugins": "^7.0.0"
	},
	"devDependencies": {
		"@automattic/calypso-apps-builder": "workspace:^",
		"@automattic/calypso-build": "workspace:^",
		"@automattic/calypso-typescript-config": "workspace:^",
		"@automattic/wp-babel-makepot": "workspace:^",
		"@wordpress/dependency-extraction-webpack-plugin": "5.9.0",
		"@wordpress/readable-js-assets-webpack-plugin": "3.0.0",
		"copy-webpack-plugin": "^10.2.4",
		"typescript": "^5.3.3",
		"webpack": "^5.91.0"
	},
	"peerDependencies": {
		"@wordpress/data": "^10.0.0",
		"@wordpress/element": "^6.0.0",
		"postcss": "*",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"redux": "^4.2.1"
	},
	"private": true
}
