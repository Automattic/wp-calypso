{
	"extends": "@automattic/calypso-build/tsconfig",
	"compilerOptions": {
		// Disallow features that require cross-file information for emit.
		// Must be used with babel typescript
		"isolatedModules": true,

		"baseUrl": "../..",
		"paths": {
			"*": [ "*", "../../*" ]
		},

		"noEmit": true,
		"incremental": true,
		"tsBuildInfoFile": "../../../.tsc-cache/gutenboarding"
	}
}
