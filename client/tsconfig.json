{
	"extends": "@automattic/calypso-typescript-config/mixed-package.json",
	"compilerOptions": {
		"rootDir": ".",
		"noEmit": true,
		"types": [ "node" ],
		"paths": {
			"calypso/*": [ "./*" ]
		},
	},
	"references": [
		{ "path": "../packages" },
		{ "path": "../build-tools" }
	],
	"exclude": [
		"./**/node_modules/**/*",
		"./**/test/**/*",
		"./server/devdocs/search-index.js"
	]
}
